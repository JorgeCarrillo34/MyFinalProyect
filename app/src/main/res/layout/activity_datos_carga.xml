<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".datosCarga">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATOS DE LA SOLICITUD"
        android:textSize="30sp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tennis Nike"
        android:textSize="16sp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOGOTA - MEDELLIN"
        android:textSize="16sp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARGA GENERAL"
        android:textSize="16sp"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnAceptarCarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="aceptaCarga"
        android:text="Aceptar" />

    <Button
        android:id="@+id/btnRechazar"
        android:onClick="rechazarCarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rechazar"/>







</LinearLayout>